.container-fluid
  .row
    = render 'layouts/sidebar'
    .col-6.mx-auto
      .flex-column
        %h3.text-dark.text-decoration-none.p-3
          ◆ Look this weeks nominee
        .p-5
          %h4.text-center
            Best Faded award
          %table.table.charts-css.bar.show-labels.show-primary-axis
            %thead
              %tr
                %th
                %th{scope:"col"}
                  number of votes obtained
            %tbody
            // faded_award = ノミニーインスタンスが入っている
            - faded_award =  @jeans.where(nominee_id: 1)
            - faded_award.each do |f|
              - jeans = Jeans.find_by(id: f.jeans_id)
              %tr.mt-4
                %th
                  = link_to user_path(jeans.user) do
                    = image_tag jeans.user.image.url, size: "40x40", class: "rounded-circle"
                %td
                  = jeans.nominee_maps.where(nominee_id: 1).count


        .p-5
          %h4
            Best Fashinable
          - faded_award =  @jeans.where(nominee_id: 2)
          = bar_chart faded_award.count
        .p-5
          %h4
            Best Whisker
          - faded_award =  @jeans.where(nominee_id: 3)
          = bar_chart faded_award.count
        .p-5
          %h4
            Best Shevron
          - faded_award =  @jeans.where(nominee_id: 4)
          = bar_chart faded_award.count
        .p-5
          %h4
            Best 501
          - faded_award =  @jeans.where(nominee_id: 5)
          = bar_chart faded_award.count
        %h3.text-dark.text-decoration-none
          ◆ Look last week's winner
    .col-3