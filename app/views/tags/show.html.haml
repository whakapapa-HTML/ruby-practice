.container-fluid
  .row
    = render 'layouts/sidebar'
    .col-4.mx-auto
      .d-flex.mb-3
        %h4
          Tag:
        %strong.ml-3.d-flex.align-items-center
          = @tag.tag_name
          (#{@tag.posts.count})
      %strong
      - @tag.posts.each do |post|
        = render 'posts/posts', post: post
    .col-3
